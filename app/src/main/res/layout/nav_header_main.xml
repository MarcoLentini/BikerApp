<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageViewNavHeader"
            android:layout_width="@dimen/dp96"
            android:layout_height="@dimen/dp96"
            android:layout_gravity="center"
            android:contentDescription="@string/contentDescription"
            app:srcCompat="@drawable/biker_logo"
            app:civ_border_color="@color/colorPrimaryText"
            app:civ_border_width="2sp"/>

    <TextView
        android:id="@+id/textViewNavHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="2dp"
        android:layout_marginBottom="2dp"
        android:text="@string/username_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"/>


</LinearLayout>
