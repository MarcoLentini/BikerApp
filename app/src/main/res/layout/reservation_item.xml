<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

             <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                 <TextView
                     android:id="@+id/textViewReservationId"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:padding="4dp"
                     android:layout_weight="1"
                     android:drawableStart="@drawable/ic_hashtag"
                     android:drawableLeft="@drawable/ic_hashtag"
                     android:drawablePadding="4dp"
                     android:gravity="center_vertical"
                     android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                    <TextView
                    android:id="@+id/textViewRestaurantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                        android:padding="4dp"
                    android:drawableStart="@drawable/ic_restaurant"
                    android:drawableLeft="@drawable/ic_restaurant"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                 <TextView
                     android:id="@+id/textViewUserName"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:padding="4dp"
                     android:drawableStart="@drawable/ic_account_name"
                     android:drawableLeft="@drawable/ic_account_name"
                     android:drawablePadding="4dp"
                     android:gravity="center_vertical"
                     android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
             </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewTimestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:drawableTint="@color/colorPrimaryText"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/textViewKmTravelled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:drawableTint="@color/colorPrimaryText"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>